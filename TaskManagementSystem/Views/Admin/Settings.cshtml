@model TaskManagementSystem.Models.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
}
<h2>System Settings</h2>
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
<form asp-action="Settings" method="post">
    <div class="mb-3">
        <label asp-for="SiteName" class="form-label"></label>
        <input asp-for="SiteName" class="form-control" />
        <span asp-validation-for="SiteName" class="text-danger"></span>
    </div>
    <div class="form-check mb-3">
        <input asp-for="AllowRegistration" class="form-check-input" />
        <label asp-for="AllowRegistration" class="form-check-label"></label>
    </div>
    <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Save Settings</button>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 